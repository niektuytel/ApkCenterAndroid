<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


<LinearLayout
    android:id="@+id/topSearchBar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toHome_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:rotation="180"
        app:srcCompat="@drawable/arrow_right_gray"
        />

    <EditText
        android:id="@+id/edit_text_box"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:background="@null"
        android:textColorHint="@color/txt_gray"
        android:hint="@string/search_hint"

        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHighlight="#009688"
        android:textColorLink="#818181"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:rotation="180"
        app:srcCompat="@drawable/icon_menu"
        />

</LinearLayout>

<View
    android:id="@+id/view_0"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/view_line_white"
    app:layout_constraintTop_toBottomOf="@+id/edit_text_box"
    tools:layout_editor_absoluteX="0dp"
    />

<com.google.android.material.tabs.TabLayout
    android:id="@+id/tabLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:foregroundGravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:overScrollMode="never"
    android:visibility="gone"
    app:tabGravity="start"
    app:tabIndicatorColor="@color/tab_indicator"
    app:tabIndicator="@drawable/shape_tab_indicator"
    app:tabIndicatorFullWidth="true"
    app:tabIndicatorHeight="3dp"
    app:tabMode="scrollable"
    app:tabTextAppearance="@style/TabLayoutTextStyle"
    app:tabTextColor="#5E5E5E" />

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/view_line_white"
    tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/status_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_app_request"
            android:layout_width="102dp"
            android:layout_height="38dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/button_background_blue_2"
            android:text="@string/request_text"
            android:textAllCaps="false"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>

