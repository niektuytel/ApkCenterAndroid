<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

<LinearLayout
    android:id="@+id/layout_searchBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_toHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:rotation="180"
        app:srcCompat="@drawable/arrow_right_gray"
        />

    <EditText
        android:id="@+id/eText_searchBox"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:background="@null"
        android:textColorHint="@color/txt_gray"

        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHighlight="#009688"
        android:textColorLink="#818181"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_request_app"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/button_background_blue_border"
        android:text="@string/request_text"
        android:textColor="#404040"
        android:padding="10dp"
        android:textAllCaps="false"
        android:visibility="gone"
        />

</LinearLayout>

<View
    android:id="@+id/view_0"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/view_line_white"
    app:layout_constraintTop_toBottomOf="@+id/edit_text_box"
    tools:layout_editor_absoluteX="0dp"
    />

<com.google.android.material.tabs.TabLayout
    android:id="@+id/tabLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:foregroundGravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:overScrollMode="never"
    app:tabGravity="start"
    app:tabIndicatorColor="@color/tab_indicator"
    app:tabIndicator="@drawable/shape_tab_indicator"
    app:tabIndicatorFullWidth="true"
    app:tabIndicatorHeight="3dp"
    app:tabMode="scrollable"
    app:tabTextAppearance="@style/TabLayoutTextStyle"
    app:tabTextColor="#5E5E5E"
    android:visibility="visible"
    />

<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/view_line_white"
    tools:layout_editor_absoluteX="0dp" />

</LinearLayout>

