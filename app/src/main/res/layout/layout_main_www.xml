<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/www_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_white" />

    <LinearLayout
        android:id="@+id/wwwTitle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_websiteTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="15"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Website"
            android:textAllCaps="false"
            android:textColor="@color/txt_gray"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cView_websiteLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/light_gray"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_limit"
                    android:textColor="#000"
                    android:padding="2dp"
                    android:layout_marginTop="2dp"
                    />
                <TextView
                    android:id="@+id/txt_websiteLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background_limit"
                    android:text="@string/txt_limit_default"
                    android:textColor="#FFF"
                    android:padding="2dp"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/iView_websitePrevious"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotation="180"
            android:padding="10dp"
            app:srcCompat="@drawable/icon_arrow_green"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iView_websiteReload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            app:srcCompat="@drawable/icon_refresh"
            android:src="@drawable/icon_refresh"
            tools:srcCompat="@drawable/icon_refresh" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cView_website"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <WebView
            android:id="@+id/wView_websiteBrowser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout" />
    </androidx.cardview.widget.CardView>

</LinearLayout>